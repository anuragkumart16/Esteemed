generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(uuid()) @map("_id")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  streakStartDate DateTime?
  urges           Urge[]
  relapses        Relapse[]
  feedbacks       Feedback[]
  daysOnPlatform  Int       @default(0)
  lastActiveDate  DateTime?
  panicButtonClicks Int     @default(0)
}

model Urge {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  userId  String
  user    User     @relation(fields: [userId], references: [id])
  trigger String
  victory String
  date    DateTime @default(now())
}

model Relapse {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  user   User     @relation(fields: [userId], references: [id])
  reason String
  date   DateTime @default(now())
}

model Feedback {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

model EarlyAccess {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  email     String
  createdAt DateTime @default(now())
}

model UserVisit {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  visitorId String
  ip        String?
  country   String?
  city      String?
  userAgent String?
  createdAt DateTime @default(now())
}
